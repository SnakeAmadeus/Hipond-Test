.index-list .sidebar {
    flex-direction: column;
    font-size: 24rpx;
    position: fixed;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.index-list .sidebar,.index-list .sidebar-item {
    align-items: center;
    display: flex;
}

.index-list .sidebar-item {
    border-radius: 50%;
    height: 40rpx;
    justify-content: center;
    margin-top: 8rpx;
    width: 40rpx;
}

.index-list .sidebar-item-active {
    background-color: #3963bc;
    color: #fff;
}

.index-list .tip {
    align-items: center;
    background-color: #d8d8d8;
    border-radius: 90px 90px 0;
    display: flex;
    height: 90rpx;
    justify-content: center;
    left: -160rpx;
    position: absolute;
    transform: rotate(-45deg) translateY(-35%);
    width: 90rpx;
}

.index-list .tip-text {
    font-size: 30rpx;
    transform: rotate(45deg);
}